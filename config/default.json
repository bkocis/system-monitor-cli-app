{
  "refresh_rate": 1.0,
  "max_history_points": 100,
  "temperature_thresholds": {
    "warning": 70,
    "critical": 80
  },
  "display": {
    "show_gpu": true,
    "show_network": false,
    "graph_height": 8,
    "graph_length": 100
  },
  "colors": {
    "normal": "green",
    "warning": "yellow", 
    "critical": "red"
  },
  "filters": {
    "exclude_virtual_filesystems": true,
    "exclude_loop_devices": true,
    "exclude_snap_mounts": true
  }
}
